<div class="subscribe">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="section-heading">
                    <h2>By Subscribing To Our Newsletter You Can Get 30% Off</h2>
                    <span>Details to details is what makes Hexashop different from the other themes.</span>
                </div>
                <form id="subscribe" action="" method="get">
                    <div class="row">
                        <div class="col-lg-10">
                            <fieldset>
                                <input name="email" type="text" id="email" pattern="[^ @]*@[^ @]*"
                                       placeholder="{{ 'sylius.ui.email'|trans }}" required="">
                            </fieldset>
                        </div>
                        <div class="col-lg-2">
                            <fieldset>
                                <button type="submit" id="form-submit" class="main-dark-button bg-primary">
                                    <i class="fa fa-paper-plane"></i>
                                </button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-4">
                <div class="row">
                    <div class="col-6">
                        <ul>
                            <li>Store Location:<br><span>
                                    {{ sylius.channel.shopBillingData.street }}
                                    {{ sylius.channel.shopBillingData.city }}
                                    {{ sylius.channel.shopBillingData.postcode }}
                                    {{ sylius.channel.shopBillingData.countryCode }}
                                </span></li>
                            <li>Phone:<br><span>{{ sylius.channel.contactPhoneNumber }}</span></li>
                        </ul>
                    </div>
                    <div class="col-6">
                        <ul>
                            <li>Work Hours:<br><span>07:30 AM - 9:30 PM Daily</span></li>
                            <li>Email:<br><span>{{ sylius.channel.contactEmail }}</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
